# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# API Configuration
# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:5174"]

# Trusted Hosts Configuration (add your domain in production)
TRUSTED_HOSTS=["localhost","your_domain.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-use-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# Google OAuth Configuration
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# AWS DynamoDB Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
DYNAMODB_USERS_TABLE=diagrammatic_users
DYNAMODB_DIAGRAMS_TABLE=diagrammatic_diagrams
DYNAMODB_PROBLEMS_TABLE=diagrammatic_problems
